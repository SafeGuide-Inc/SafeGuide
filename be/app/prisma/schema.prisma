generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Log {
  id      Int    @id @default(autoincrement())
  level   Level
  message String
  meta    Json
}

enum Level {
  Info
  Warn
  Error
}

enum Status {
  Expired
  Active
  Invited
}

model user {
  id             String         @id @default(uuid())
  firstName      String         @map("first_name")
  lastName       String         @map("last_name")
  email          String         @map("user_id")
  phoneNumber    String         @map("phone_number")
  organizationId String         @map("organization_id")
  status         Status
  createdAt      DateTime       @default(now())
  updatedAt      DateTime
  devices        devices[]
  userSettings   userSettings[]
  incidence      incidence[]
  userReports    userReports[]
}

model devices {
  id          String @id @default(uuid())
  userId      String
  user        user   @relation(fields: [userId], references: [id])
  deviceToken String
  os          String
}

model userSettings {
  id     String @id @default(uuid())
  userId String @map("user_id")
  user   user   @relation(fields: [userId], references: [id])
}

model organization {
  id          String @id @default(uuid())
  name        String
  lat         Float
  long        Float
  city        String
  state       String
  country     String
  zipcode     Int
  status      Status
  emailDomain String @map("email_domain") // @uoregon.edu
}

model incidence {
  id              String        @id @default(uuid())
  lat             String
  long            String
  userId          String
  user            user          @relation(fields: [userId], references: [id])
  incidenceTypeId String        @map("incidence_type_id")
  incidenceType   incidenceType @relation(fields: [incidenceTypeId], references: [id])
  date            DateTime
}

model incidenceType {
  id          String      @id @default(uuid())
  name        String
  description String
  incidence   incidence[]
}

model userReports {
  id              String @id @default(uuid())
  reportingUserId String
  user            user   @relation(fields: [reportingUserId], references: [id])
  incidenceId     String

  date   DateTime
  reason String
}
