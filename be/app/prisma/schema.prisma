model Log {
  id      Int    @id @default(autoincrement())
  level   Level
  message String
  meta    Json
}

enum Level {
  Info
  Warn
  Error
}

enum Status {
  Expired
  Active
  Invited
}

enum Category {
  Theft
  Violence
  ThreateningPerson
  SuspiciousActivity
  Hazard
  Search
  EmergencyResponder
  GeneralIncident
  Other
}

model user {
  id             String         @id @default(uuid())
  firstName      String         @map("first_name")
  lastName       String         @map("last_name")
  email          String         @unique @map("email")
  phoneNumber    String         @unique @map("phone_number")
  organizationId String         @map("organization_id")
  status         Status
  createdAt      DateTime       @default(now())
  updatedAt      DateTime
  devices        device[]
  userSettings   userSettings[]
  incidence      incidence[]
  userReports    userReports[]
}

model device {
  id          String @id @default(uuid())
  userId      String
  user        user   @relation(fields: [userId], references: [id], onDelete: Cascade)
  deviceToken String
  os          String
}

model userSettings {
  id     String @id @default(uuid())
  userId String @map("user_id")
  user   user   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_settings")
}

model organization {
  id          String @id @default(uuid())
  name        String
  lat         Float
  long        Float
  city        String
  state       String
  country     String
  zipcode     Int
  status      Status
  emailDomain String @map("email_domain") // @uoregon.edu
}

model incidence {
  id          String @id @default(uuid())
  lat         String
  long        String
  userId      String
  user        user   @relation(fields: [userId], references: [id], onDelete: Cascade)
  existsVotes Int    @default(0) @map("exists_votes") // Ranks the amount of votes an incidence has
  incidenceTypeId String        @map("incidence_type_id")
  incidenceType   incidenceType @relation(fields: [incidenceTypeId], references: [id])
  internalReport  Boolean       @default(true) @map("internal_report")
  date            DateTime
}

model incidenceType {
  id          String      @id @default(uuid())
  name        String
  description String
  category    Category
  incidence   incidence[]

  @@map("incidence_type")
}

model userReports {
  id              String @id @default(uuid())
  reportingUserId String
  user            user   @relation(fields: [reportingUserId], references: [id], onDelete: Cascade)
  incidenceId     String

  date   DateTime
  reason String

  @@map("user_reports")
}
